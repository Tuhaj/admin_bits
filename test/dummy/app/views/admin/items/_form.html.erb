<%= form_for [:admin, @item] do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :order_id %>
  <%= f.text_field :order_id %>

  <%= f.submit class: 'button success', id: 'submit' %>
<% end %>
