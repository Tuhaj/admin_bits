<div id="filtering">
  <%= admin_form do %>
    Name: <%= admin_text_filter :name %>
    <button>Filter!</button>
  <% end %>
</div>

<table>
  <thead>
    <th>
      <%= admin_link(:name, "Name") %>
      <%= admin_link(:price, "Total price") %>
    </th>
  </thead>
  <tbody>
    <% items.each do |item| %>
      <tr>
        <td>
          <%= item.name %>
        </td>
        <td>
          <%= item.price %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
